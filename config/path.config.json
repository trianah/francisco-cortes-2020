{
	"src": "./src/",
	"craft": "./deploy/",
	"templates": "./deploy/templates/",
	"static": "./static/",
	"public": "./deploy/public_html/",
	"proxy": "http://local.francisco-cortes.com",

	"critical": [
		{
			"url": "/",
			"css": "homepage"
		}
	],

	"images": "**/*.+(jpg|jpeg|png|gif|webp)",
	"css": "**/*.css",
	"svgs": "**/*.svg",
	"twig": "**/*.twig",

	"cacheTag": {
		"file": "_layout.twig",
		"dir": "./deploy/templates/wrapper"
	},

	"symbols": {
		"src": "symbols/*.svg",
		"scss": "scss/1-base",
		"html": "./deploy/templates/wrapper"
	},

	"js": {
		"src": "js",
		"dest": "dist/js",
		"libs": ["./node_modules/picturefill/dist/picturefill.min.js"]
	},

	"scss": {
		"src": ["scss/**/**/*.scss"],
		"tailwind": ["scss/**/**/*.js"],
		"dest": "dist/css"
	},

	"files": {
		"exclude": "**/*.+(jpg|jpeg|png|gif|svg|css|js)",
		"dotFiles": ".*",
		"include": "**/*.*"
	}
}
