{% set url = url|default('#0') %}
{% set text = text|default('Read more') %}
{% set type = type|default('primary') %}

{% set btnClasses = type == 'primary'
	? 'text-white bg-indigo-600 hover:bg-indigo-500'
	: 'text-indigo-600 bg-white hover:text-indigo-500'
%}

<a href="{{ url }}"
	class="inline-flex items-center justify-center px-5 py-3 border border-transparent text-base leading-6 font-medium rounded-md {{
	btnClasses
	}} focus:outline-none focus:shadow-outline transition duration-150 ease-in-out">
	{{ text }}
</a>
